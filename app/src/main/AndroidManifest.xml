<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="collinsims.Yolodex" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name="collinsims.Yolodex.GlobalVariables"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="collinsims.Yolodex.HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="collinsims.Yolodex.SettingsActivity"
            android:launchMode="singleTask"/>
        <activity android:name="collinsims.Yolodex.CalendarActivity"
            android:launchMode="singleTask"/>
        <activity android:name="collinsims.Yolodex.ContactsActivity"
            android:launchMode="singleTask"/>
        <activity android:name="collinsims.Yolodex.NewContactActivity"
            android:launchMode="singleTask"/>
        <activity android:name="collinsims.Yolodex.AddNewBusiness"/>
        <activity android:name=".EditBusinesses"
            android:launchMode="singleTask"/>
    </application>

</manifest>
